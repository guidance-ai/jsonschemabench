{
    "title": "Invocation manifest for NDMG (NeuroData's MR Graphs Package)",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "config": {
            "type": "object",
            "properties": {
                "atlas": {
                    "default": "desikan",
                    "type": "string",
                    "enum": [
                        "desikan",
                        "CPAC200",
                        "DKT",
                        "HarvardOxfordcort",
                        "HarvardOxfordsub",
                        "JHU",
                        "Schaefer2018-200",
                        "Talairach",
                        "aal",
                        "brodmann",
                        "glasser",
                        "yeo-7-liberal",
                        "yeo-17-liberal"
                    ]
                },
                "mod_type": {
                    "default": "det",
                    "type": "string",
                    "enum": [
                        "det",
                        "prob"
                    ]
                },
                "track_type": {
                    "default": "local",
                    "type": "string",
                    "enum": [
                        "local",
                        "particle"
                    ]
                },
                "mod_func": {
                    "default": "csa",
                    "type": "string",
                    "enum": [
                        "csa",
                        "csd"
                    ]
                },
                "reg_style": {
                    "default": "native",
                    "type": "string",
                    "enum": [
                        "native",
                        "native_dsn",
                        "mni"
                    ]
                },
                "vox_size": {
                    "default": "1mm",
                    "type": "string",
                    "enum": [
                        "local",
                        "particle"
                    ]
                },
                "seeds": {
                    "default": 1,
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 21
                }
            },
            "required": [
                "atlas",
                "mod_type",
                "track_type",
                "mod_func",
                "reg_style",
                "vox_size",
                "seeds"
            ]
        },
        "inputs": {
            "type": "object",
            "properties": {
                "t1w": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "nifti"
                            ]
                        }
                    }
                },
                "dwi": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "nifti"
                            ]
                        }
                    }
                },
                "bvecs": {
                    "type": "object",
                    "properties": {}
                },
                "bvals": {
                    "type": "object",
                    "properties": {}
                }
            },
            "required": [
                "t1w",
                "dwi",
                "bvecs",
                "bvals"
            ]
        }
    },
    "required": [
        "config",
        "inputs"
    ]
}